<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/login"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_marginTop="65dp"
            android:background="@color/blanco"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_margin="10dp"

                android:layout_gravity="center"
                app:srcCompat="@drawable/logo_icon2"
                android:layout_height="wrap_content" />
        <TextView
                android:layout_width="wrap_content"
                android:text="Bienvenido, introduce tu NIP"
                android:textSize="18dp"
                android:layout_margin="7dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        <!--
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:hint="Correo electrÃ³nico"
                android:layout_margin="7dp"
                android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
        -->
        <Spinner
                android:layout_width="match_parent"
                android:tooltipText="Selecciona tu perfil"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerPerfil"/>


            <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/textonip"
                    android:hint="Ingresa tu NIP"
                    android:inputType="numberPassword"
                    android:layout_margin="7dp"
                    android:layout_height="wrap_content" />



        <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
        <TextView
                android:id="@+id/txtErrorNip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="?attr/colorError"
                android:visibility="invisible" />

        <Button
                android:layout_width="match_parent"
                android:textColor="@color/blanco"
                android:id="@+id/botonIngresar"
                android:text="ingresar"
                android:layout_marginHorizontal="15dp"
                android:background="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />
        <!--
                <Button
                        android:id="@+id/botonRegistrarse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="25dp"
                        android:background="@color/colorAccent"
                        android:text="Registrarse"
                        android:textColor="@color/blanco" />
        -->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>